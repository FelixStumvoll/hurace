<UserControl x:Class="Hurace.RaceControl.Controls.RaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hurace.RaceControl.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:Hurace.RaceControl.ViewModels"
             xmlns:converters="clr-namespace:Hurace.RaceControl.Converters"
             d:DataContext="{d:DesignInstance vm:RaceViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <converters:RaceRunningBoolConverter x:Key="RaceRunningBoolConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="5">
            <TextBlock HorizontalAlignment="Left" FontWeight="Bold"
                       Text="{Binding RaceState.Race.RaceDescription}" />
            <Button HorizontalAlignment="Right" Content="Löschen" Padding="5,0" Command="{Binding DeleteCommand}" />
        </DockPanel>
        <TabControl Grid.Row="1" x:Name="TabControl" SelectedIndex="{Binding SelectedTab}" BorderThickness="0,1,0,0">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction CommandParameter="{Binding ElementName=TabControl, Path=SelectedIndex}"
                                           Command="{Binding TabSelectionChangedCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <TabItem Header="Stammdaten">
                <local:RaceBaseDataViewControl DataContext="{Binding RaceBaseDataViewModel}" />
            </TabItem>
            <TabItem Header="Startliste">
                <local:RaceStartListControl DataContext="{Binding RaceStartListViewModel}" />
            </TabItem>
            <TabItem Header="Race Control">
                <local:RaceControl DataContext="{Binding RaceControlViewModel}" />
            </TabItem>
            <TabItem Header="Anzeigekontrolle" IsEnabled="{Binding RaceState.Race, Converter={StaticResource RaceRunningBoolConverter}}">
                <local:RaceDisplayControl DataContext="{Binding RaceDisplayViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>