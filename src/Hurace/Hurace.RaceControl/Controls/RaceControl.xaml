<UserControl x:Class="Hurace.RaceControl.Controls.RaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hurace.RaceControl.Controls"
             xmlns:vm="clr-namespace:Hurace.RaceControl.ViewModels"
             xmlns:domain="clr-namespace:Hurace.Dal.Domain;assembly=Hurace.Dal.Domain"
             xmlns:converters="clr-namespace:Hurace.RaceControl.Converters"
             xmlns:raceControl="clr-namespace:Hurace.RaceControl"
             xmlns:api="clr-namespace:Hurace.Core.Api;assembly=Hurace.Core.Api"
             xmlns:models="clr-namespace:Hurace.Core.Api.Models;assembly=Hurace.Core.Api"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:RaceControlViewModel}">

    <UserControl.Resources>
        <converters:IsNullConverter x:Key="IsNullConverter" />
        <converters:IntToTimespanConverter x:Key="IntToTimespanConverter" />
        <converters:IntZeroBoolConverter x:Key="IntZeroBoolConverter" />
    </UserControl.Resources>

    <ContentPresenter Content="{Binding}">
        <ContentPresenter.Resources>
            <DataTemplate x:Key="Upcoming">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Command="{Binding StartRaceCommand}" Padding="10,0" Content="Start Race" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="Running">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Current Skier -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Aktueller Läufer:" />
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="Gray"
                            Margin="0,0,5,0">
                        <ContentPresenter Margin="5" Height="30" Content="{Binding}">
                            <ContentPresenter.Resources>
                                <DataTemplate x:Key="Skier">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" VerticalAlignment="Center" FontSize="25"
                                                   FontWeight="Bold" Text="{Binding CurrentSkier.StartNumber}" />
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal">
                                            <StackPanel.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="20" />
                                                </Style>
                                            </StackPanel.Resources>
                                            <TextBlock Text="{Binding CurrentSkier.Skier.FirstName}" Margin="0,0,5,0" />
                                            <TextBlock Text="{Binding CurrentSkier.Skier.LastName}" />
                                            <TextBlock Margin="5,0" Text="-" />
                                            <TextBlock Text="{Binding CurrentSkier.Skier.Country.CountryCode}" />
                                            <Button Height="25" Content="Disqualifizieren" Margin="20,0,0,0" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                                <DataTemplate x:Key="NoSkier">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock FontSize="15" FontWeight="Bold"
                                                   Text="Derzeit kein Rennläufer auf der Strecke" />
                                    </StackPanel>
                                </DataTemplate>

                            </ContentPresenter.Resources>

                            <ContentPresenter.Style>
                                <Style TargetType="ContentPresenter">
                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding CurrentSkier, Converter={StaticResource IsNullConverter}}"
                                            Value="True">
                                            <Setter Property="ContentTemplate" Value="{StaticResource NoSkier}" />
                                        </DataTrigger>

                                        <DataTrigger
                                            Binding="{Binding CurrentSkier, Converter={StaticResource IsNullConverter}}"
                                            Value="False">
                                            <Setter Property="ContentTemplate" Value="{StaticResource Skier}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentPresenter.Style>
                        </ContentPresenter>

                    </Border>
                    <!-- Controls -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Height="25" VerticalAlignment="Center"
                                Content="Strecke freigeben" Command="{Binding ReadyTrackCommand}" />
                    </StackPanel>

                    <!-- Lists -->
                    <Grid Grid.Row="2" Grid.Column="0" Margin="0,10,5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Startliste" />
                        <ListBox Grid.Row="1" x:Name="sl" ItemsSource="{Binding StartList}"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                            <TextBlock FontWeight="Bold" Text="{Binding StartNumber}" Margin="0,0,5,0" />
                                            <ContentPresenter ContentTemplate="{StaticResource SkierTemplate}"
                                                              Content="{Binding Skier}" />
                                        </StackPanel>

                                        <Button DockPanel.Dock="Right" Margin="5,0,0,0" Content="Cancel"
                                                CommandParameter="{Binding Skier.Id}"
                                                Command="{Binding ElementName=sl, Path=DataContext.CancelSkier}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1" Margin="0,10,5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Zwischenzeiten:" Margin="0,0,5,0" />
                        <ListBox Grid.Row="1" ItemsSource="{Binding SkierTimeData}">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:TimeDifference}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding TimeData.Sensor.SensorNumber}" Margin="0,0,25,0" />
                                        <TextBlock Text="{Binding TimeData.Time}" Margin="0,0,25,0" />
                                        <TextBlock Text="{Binding DifferenceToLeader}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="2" Margin="0,10,5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Rangliste" />
                        <ListBox Grid.Row="1" ItemsSource="{Binding Ranking}" HorizontalContentAlignment="Stretch" />
                    </Grid>

                    <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,10,5,0"
                                HorizontalAlignment="Right">
                        <Button Height="25" VerticalAlignment="Center" Margin="5,0,0,0"
                                Content="Rennen abbrechen" />
                    </StackPanel>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="Finished">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontWeight="Bold" Text="Rennen bereits vorbei" />
                </StackPanel>
            </DataTemplate>
        </ContentPresenter.Resources>

        <ContentPresenter.Style>
            <Style TargetType="{x:Type ContentPresenter}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RaceState.Race.RaceStateId}" Value="2">
                        <Setter Property="ContentTemplate" Value="{StaticResource Running}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RaceState.Race.RaceStateId}" Value="3">
                        <Setter Property="ContentTemplate" Value="{StaticResource Finished}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RaceState.Race.RaceStateId}" Value="4">
                        <Setter Property="ContentTemplate" Value="{StaticResource Finished}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RaceState.Race.RaceStateId}" Value="1">
                        <Setter Property="ContentTemplate" Value="{StaticResource Upcoming}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentPresenter.Style>
    </ContentPresenter>

</UserControl>