<UserControl x:Class="Hurace.RaceControl.Controls.RaceBaseDataViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hurace.RaceControl.Controls"
             xmlns:vm="clr-namespace:Hurace.RaceControl.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance  vm:RaceItemViewModel}">
    <WrapPanel Orientation="Vertical">
        <WrapPanel.Resources>
            <Style TargetType="{x:Type StackPanel}">

                <Setter Property="Margin" Value="10,0" />
            </Style>


        </WrapPanel.Resources>
        <StackPanel Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Edit}" Value="True">
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="IsReadOnly" Value="False" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Edit}" Value="False">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="IsReadOnly" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Beschreibung:" />
            <TextBox Text="{Binding Race.RaceDescription}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Disziplin: " />
            <TextBlock Text="{Binding Race.Discipline.DisciplineName}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ort: " />
            <TextBlock Text="{Binding Race.Location.LocationName}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Geschlecht: " />
            <TextBlock Text="{Binding Race.Gender.GenderDescription}" />
        </StackPanel>

    </WrapPanel>
</UserControl>