<UserControl x:Class="Hurace.RaceControl.Controls.RaceBaseDataViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hurace.RaceControl.Controls"
             xmlns:vm="clr-namespace:Hurace.RaceControl.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance  vm:RaceItemViewModel}">

    <UserControl.Resources>
        <Style x:Key="CrudButtonStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <ScrollViewer Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal">
                <!-- Labels -->
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="Border">
                            <Setter Property="Height" Value="25" />
                            <Setter Property="Margin" Value="0,5,0,0" />
                        </Style>
                    </StackPanel.Resources>
                    <Border Margin="0">
                        <TextBlock Text="Beschreibung:" VerticalAlignment="Center" />
                    </Border>
                    <Border>
                        <TextBlock Text="Datum:" VerticalAlignment="Center" />
                    </Border>
                    <Border>
                        <TextBlock Text="Disziplin:" VerticalAlignment="Center" />
                    </Border>
                    <Border>
                        <TextBlock Text="Ort:" VerticalAlignment="Center" />
                    </Border>
                    <Border>
                        <TextBlock Text="Geschlecht:" VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
                <!-- Inputs -->
                <StackPanel Orientation="Vertical" Margin="50,0,0,0">
                    <StackPanel.Resources>
                        <Style x:Key="InputStyle" TargetType="{x:Type Control}">
                            <Setter Property="Height" Value="25" />
                            <Setter Property="Margin" Value="0,5,0,0" />
                            <Setter Property="Width" Value="250" />
                        </Style>
                        
                        <Style TargetType="TextBox" BasedOn="{StaticResource InputStyle}">
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Edit}" Value="True">
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="IsReadOnly" Value="False" />
                                    <Setter Property="Padding" Value="0" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Edit}" Value="False">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="IsReadOnly" Value="True" />
                                    <Setter Property="Padding" Value="1" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="ComboBox" BasedOn="{StaticResource InputStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Edit}" Value="True">
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Edit}" Value="False">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DatePicker" BasedOn="{StaticResource InputStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Edit}" Value="True">
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Edit}" Value="False">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>
                    <TextBox Margin="0" Text="{Binding Race.RaceDescription}" />
                    <DatePicker SelectedDate="{Binding Race.RaceDate}" />
                    <ComboBox ItemsSource="{Binding Disciplines}" DisplayMemberPath="DisciplineName"
                              SelectedItem="{Binding SelectedDiscipline}">
                    </ComboBox>
                    <TextBox Text="{Binding Race.Location.LocationName}" />
                    <ComboBox ItemsSource="{Binding Genders}" DisplayMemberPath="GenderDescription"
                              SelectedItem="{Binding SelectedGender}" />
                </StackPanel>
            </StackPanel>

        </ScrollViewer>

        <ContentPresenter Content="{Binding}" Grid.Row="1" Margin="10">
            <ContentPresenter.Resources>
                <DataTemplate x:Key="InEdit">
                    <StackPanel Style="{StaticResource CrudButtonStyle}">
                        <Button Content="Abbrechen" Command="{Binding CancelEdit}" Padding="5,0" Margin="0,0,10,0" />
                        <Button Content="Speichern" Command="{Binding SaveEdit}" Padding="5,0" />
                    </StackPanel>
                </DataTemplate>

                <DataTemplate x:Key="View">
                    <StackPanel Style="{StaticResource CrudButtonStyle}">
                        <Button Content="Bearbeiten" Command="{Binding StartEdit}" Padding="5,0" />
                    </StackPanel>
                </DataTemplate>
            </ContentPresenter.Resources>

            <ContentPresenter.Style>
                <Style TargetType="{x:Type ContentPresenter}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Edit}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource InEdit}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Edit}" Value="False">
                            <Setter Property="ContentTemplate" Value="{StaticResource View}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentPresenter.Style>
        </ContentPresenter>

    </Grid>
</UserControl>